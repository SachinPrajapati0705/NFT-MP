.modal_overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: none !important;
    transition: none !important;
    animation: none !important;
}

.modal_content {
    position: relative;
    width: 90%;
    height: 90%;
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    transform: none !important;
    transition: none !important;
    animation: none !important;
}

.close_button {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 30px;
    height: 30px;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 50%;
    font-size: 20px;
    line-height: 30px;
    text-align: center;
    cursor: pointer;
    z-index: 10000;
    transform: none !important;
    transition: none !important;
    animation: none !important;
}

.pdf_controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: var(--main-bg-color);
    border-radius: 0.5rem;
    border: 1px solid var(--icons-color);
    margin-bottom: 1rem;
}

.page_controls {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--icons-color);
}

.zoom_controls {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--icons-color);
}

.control_button {
    background-color: var(--icons-color);
    color: var(--main-bg-color);
    border: none;
    padding: 0.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

.control_button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.control_button:not(:disabled):hover {
    background-color: var(--main-bg-color);
    color: var(--icons-color);
}

.pdf_container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #2a2a2a;
    overflow: hidden;
}

.pdf_frame {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    margin: 0;
    padding: 0;
    background: white;
    transform: none !important;
    transition: none !important;
    animation: none !important;
}

.loading {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    color: var(--icons-color);
    font-size: 16px;
}

.error {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 20px;
    background-color: rgba(255, 68, 68, 0.1);
    border-radius: 8px;
    border: 1px solid #ff4444;
    color: #ff4444;
    text-align: center;
    max-width: 80%;
}

.error_details {
    margin-top: 8px;
    color: #ff8888;
    font-size: 14px;
}

.pdf_page {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    border-radius: 0.5rem;
    background-color: white;
} 